<thead>
  <tr>
    <th class='name'>
      Name
    </th>

    <th class='tier'>
      Tier
    </th>

    <th class='stat'>
      Attack
      <%# stat_description('Attack') %>
    </th>

    <%# Rocket launchers have velocity and blast radius, others impact and range %>
    <% if params[:type] == 'rocket_launcher' %>
      <th class='stat'>
        Velo
        <%# stat_description('Velocity') %>
      </th>

      <th class='stat'>
        Blast
        <%# stat_description('Blast Radius') %>
      </th>
    <% else %>
      <th class='stat'>
        Impact
        <%# stat_description('Impact') %>
      </th>

      <th class='stat'>
        Range
        <%# stat_description('Range') %>
      </th>
    <% end %>

    <th class='stat'>
      Stab
      <%# stat_description('Stability') %>
    </th>

    <%# Fusion rifles have charge rate, others rate of fire %>
    <% if params[:type] == 'fusion_rifle' %>
      <th class='stat'>
        Charge
        <%# stat_description('Charge Rate') %>
      </th>
    <% else %>
      <th class='stat'>
        ROF
        <%# stat_description('Rate of Fire') %>
      </th>
    <% end %>

    <th class='stat'>
      AA
      <%# stat_description('Aim assistance') %>
    </th>

    <th class='stat'>
      Mag
      <%# stat_description('Magazine') %>
    </th>

    <th class='stat'>
      Reload
      <%# stat_description('Reload') %>
    </th>

    <th class='stat'>
      Equip
      <%# stat_description('Equip Speed') %>
    </th>
  </tr>
</thead>
