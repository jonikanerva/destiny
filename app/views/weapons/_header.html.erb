<thead>
  <tr>
    <th class='compare' title='Compare - Select item for compare'>
      c
    </th>

    <th class='hidden'>
    </th>

    <th class='name'>
      Name
    </th>

    <th class='tier'>
      Tier
    </th>

    <th class='stat' title='<%= stat_description('Attack') %>'>
      Attack
    </th>

    <%# Rocket launchers have velocity and blast radius, others impact and range %>
    <% if params[:type] == 'rocket_launchers' %>
      <th class='stat' title='<%= stat_description('Velocity') %>'>
        Velo
      </th>

      <th class='stat' title='<%= stat_description('Blast Radius') %>'>
        Blast
      </th>
    <% else %>
      <th class='stat' title='<%= stat_description('Impact') %>'>
        Impact
      </th>

      <th class='stat' title='<%= stat_description('Range') %>'>
        Range
      </th>
    <% end %>

    <th class='stat' title='<%= stat_description('Stability') %>'>
      Stab
    </th>

    <%# Fusion rifles have charge rate, others rate of fire %>
    <% if params[:type] == 'fusion_rifles' %>
      <th class='stat' title='<%= stat_description('Charge Rate') %>'>
        Charge
      </th>
    <% else %>
      <th class='stat' title='<%= stat_description('Rate of Fire') %>'>
        ROF
      </th>
    <% end %>

    <th class='stat' title='<%= stat_description('Aim assistance') %>'>
      AA
    </th>

    <th class='stat' title='<%= stat_description('Magazine') %>'>
      Mag
    </th>

    <th class='stat' title='<%= stat_description('Reload') %>'>
      Reload
    </th>

    <th class='stat' title='<%= stat_description('Equip Speed') %>'>
      Equip
    </th>
  </tr>
</thead>
